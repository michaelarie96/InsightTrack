<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:elevation="2dp">

    <!-- Product info header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/cart_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="iPhone 15"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/cart_item_unit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$799.99 each"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <!-- Product category -->
    <TextView
        android:id="@+id/cart_item_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Electronics"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp" />

    <!-- Quantity and price controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp">

        <!-- Quantity controls -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty:"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/decrease_quantity_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="âˆ’"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp" />

        <TextView
            android:id="@+id/cart_item_quantity"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginHorizontal="4dp" />

        <Button
            android:id="@+id/increase_quantity_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="+"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp" />

        <!-- Spacer to push total price to the right -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Item total price -->
        <TextView
            android:id="@+id/cart_item_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$799.99"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark" />

    </LinearLayout>

    <!-- Remove button -->
    <Button
        android:id="@+id/remove_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ—‘ï¸ Remove"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:minHeight="40dp" />

</LinearLayout>